<Page x:Class="Connect4.Views.ReplayView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Connect4.Views"
      xmlns:conv="clr-namespace:Connect4.Converters"
      mc:Ignorable="d"
      d:DesignHeight="768"
      d:DesignWidth="1024"
      Title="Replay">

    <Page.Resources>
        <conv:PlayerColorToBrushConverter x:Key="PlayerColorConverter"/>
        <conv:BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="CellStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Stroke" Value="#003A8C"/>
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="Fill"
                Value="{Binding State, Converter={StaticResource PlayerColorConverter}}"/>
        </Style>

        <DropShadowEffect x:Key="DropShadow"
                      Color="Black"
                      BlurRadius="20"
                      ShadowDepth="4"
                      Opacity="0.4"/>

        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="25"
                Padding="{TemplateBinding Padding}"
                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                             Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                             To="1.1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                             Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                             To="1.1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                             Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                             To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                             Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                             To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Height" Value="50"/>
        </Style>
    </Page.Resources>

    <Grid Background="#FFDDEEFF">
        <Grid Margin="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- ================== BOARD ================== -->
            <Border Grid.Column="0"
                    Width="560"
                    Height="480"
                    Background="#0047AB"
                    CornerRadius="20"
                    Padding="20"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Effect="{StaticResource DropShadow}">

                <ItemsControl ItemsSource="{Binding Cells}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="6" Columns="7"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Ellipse Width="60"
                                     Height="60"
                                     Margin="6"
                                     Stroke="#003A8C"
                                     StrokeThickness="2"
                                     Fill="{Binding State,
                                            Converter={StaticResource PlayerColorConverter}}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <!-- ================== RIGHT PANEL ================== -->
            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">

                <TextBlock Text="Replay"
                           FontSize="50"
                           FontWeight="Bold"
                           Margin="0,0,0,30"
                           HorizontalAlignment="Center"
                           FontFamily="Comic Sans MS"/>

                <TextBlock Text="{Binding PlayersText}"
                   FontSize="30"
                   FontWeight="SemiBold"
                   TextWrapping="Wrap"
                   FontFamily="Comic Sans MS"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

                <TextBlock Text="{Binding ResultText}"
                   FontSize="20"
                   FontWeight="SemiBold"
                   TextWrapping="Wrap"
                   FontFamily="Comic Sans MS"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

                <Separator Opacity="0" Height="50"/>

                <TextBlock Text="{Binding MoveCounterText}"
                FontSize="18"
                Margin="0,0,0,30"
                FontFamily="Comic Sans MS"
                HorizontalAlignment="Center"/>

                <!-- Navigation Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,30">

                    <Button Width="90"
                        Style="{StaticResource RoundedButton}"
                        Command="{Binding PreviousMoveCommand}">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FF1E88E5" Offset="0"/>
                                <GradientStop Color="#FF0D47A1" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>

                        <Viewbox Width="40" Height="40">
                            <Path Fill="White"
                              Stretch="Uniform"
                              RenderTransformOrigin="0.5,0.5"
                              Data="M2,10 L18,10 L18,4 L28,14 L18,24 L18,18 L2,18 Z">
                                <Path.RenderTransform>
                                    <ScaleTransform ScaleX="-1" ScaleY="1"/>
                                </Path.RenderTransform>
                            </Path>
                        </Viewbox>
                    </Button>

                    <Separator Opacity="0" Width="30"/>

                    <Button Width="90"
                    Style="{StaticResource RoundedButton}"
                    Command="{Binding NextMoveCommand}">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FF1E88E5" Offset="0"/>
                                <GradientStop Color="#FF0D47A1" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>

                        <Viewbox Width="40" Height="40">
                            <Path Fill="White"
                              Stretch="Uniform"
                              Data="M2,10 L18,10 L18,4 L28,14 L18,24 L18,18 L2,18 Z"/>
                        </Viewbox>
                    </Button>
                </StackPanel>

                <Button Content="Back"
                        Width="200"
                        Style="{StaticResource RoundedButton}"
                        Command="{Binding BackCommand}">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FFB0BEC5" Offset="0"/>
                            <GradientStop Color="#FF78909C" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

            </StackPanel>
        </Grid>
    </Grid>
</Page>
<Page x:Class="Connect4.Views.DbView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Connect4.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DbView">

    <Page.Resources>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                         BorderBrush="{TemplateBinding BorderBrush}"
                         BorderThickness="{TemplateBinding BorderThickness}"
                         CornerRadius="25"
                         Padding="{TemplateBinding Padding}"
                         RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                      Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                      To="1.1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                      Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                      To="1.1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                      Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                      To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                      Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                      To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Height" Value="50"/>
        </Style>

        <DropShadowEffect x:Key="DropShadow"
                      Color="Black"
                      BlurRadius="10"
                      ShadowDepth="4"
                      Opacity="0.4"/>
    </Page.Resources>

    <Grid>
        <!-- Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFDDEEFF" Offset="0"/>
                <GradientStop Color="#FFAACCFF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Title -->
        <TextBlock FontSize="80"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,30"
                   Text="Game History">
            <TextBlock.Foreground>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="Red" Offset="0"/>
                    <GradientStop Color="Yellow" Offset="0.5"/>
                    <GradientStop Color="Orange" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
            <TextBlock.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="8" Opacity="0.6"/>
            </TextBlock.Effect>
        </TextBlock>

        <!-- Main content -->
        <Grid Margin="80,140,80,40">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Games list -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,16,0">
                <ItemsControl ItemsSource="{Binding Games}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                            CornerRadius="20"
                            Padding="20"
                            Margin="0,0,0,20"
                            Effect="{StaticResource DropShadow}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Game info -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock FontSize="22"
                                       FontWeight="Bold"
                                       Text="{Binding PlayersText}" />

                                        <TextBlock FontSize="16"
                                       Margin="0,5,0,0"
                                       Text="{Binding ResultText}" />

                                        <TextBlock FontSize="14"
                                       Foreground="Gray"
                                       Text="{Binding PlayedAtText}" />
                                    </StackPanel>


                                    <!-- View button -->
                                    <Button Grid.Column="1"
                                    Content="View"
                                    Width="140"
                                    Style="{StaticResource RoundedButton}"
                                    Command="{Binding DataContext.ViewGameCommand,
                                              RelativeSource={RelativeSource AncestorType=Page}}"
                                    CommandParameter="{Binding}">
                                        <Button.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#FF66BB6A" Offset="0"/>
                                                <GradientStop Color="#FF388E3C" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Button.Background>
                                    </Button>

                                    <Button Grid.Column="2"
                                        Width="140"
                                        Margin="10,0,0,0"
                                        Content="Delete"
                                        Style="{StaticResource RoundedButton}"
                                        Command="{Binding DataContext.DeleteGameCommand,
                                                  RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}">
                                        <Button.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#FFEF5350" Offset="0"/>
                                                <GradientStop Color="#FFC62828" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Button.Background>
                                    </Button>
                                </Grid>

                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Back button -->
            <Button Grid.Row="1"
                    Content="Back"
                    Width="200"
                    Style="{StaticResource RoundedButton}"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    Command="{Binding BackCommand}">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFB0BEC5" Offset="0"/>
                        <GradientStop Color="#FF78909C" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
    </Grid>
</Page>
